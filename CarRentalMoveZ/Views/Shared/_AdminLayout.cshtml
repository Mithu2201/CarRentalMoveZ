@{
    Layout = null;
   

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var role = Context.Session.GetString("Role"); // "Admin", "Staff", "Driver"
	var name = Context.Session.GetString("UserName");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MoveZ Admin</title>
  
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@500;600&display=swap" rel="stylesheet" />

    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">


    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AdminResponsive.css" asp-append-version="true" />
</head>
<body>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="px-3 d-flex align-items-center gap-2 mb-3">
            <i class="bi bi-car-front fs-4" style="color: #1E56A0;"></i>
            <div class="brand fs-5">MoveZ</div>
        </div>
        <nav>
            <!-- Dashboard: Everyone can access -->
            @if (role == "Admin" || role == "Staff" || role == "Driver")
            {
            <a class="side-link @(currentController == "Admin" && currentAction == "Dashboard" ? "active" : "")"
               asp-controller="Admin" asp-action="Dashboard">
                <i class="bi bi-grid"></i> <span>Dashboard</span>
            </a>
			}


            <!-- Units: Admin + Staff -->
            @if (role == "Admin" || role == "Staff")
            {
                <a class="side-link @(currentController == "Admin" && currentAction == "ManageCar" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManageCar">
                    <i class="bi bi-car-front"></i> <span>Units</span>
                </a>
            }

            <!-- Bookings: Admin + Staff + Driver -->
            @if (role == "Admin" || role == "Staff" || role == "Driver")
            {
                <a class="side-link @(currentController == "Admin" && currentAction == "ManageBookings" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManageBookings">
                    <i class="bi bi-calendar2-week"></i> <span>Bookings</span>
                </a>
            }

            <!-- Customers: Admin + Staff -->
            @if (role == "Admin" || role == "Staff")
            {
                <a class="side-link @(currentController == "Admin" && currentAction == "ManageCustomer" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManageCustomer">
                    <i class="bi bi-people"></i> <span>Customers</span>
                </a>
            }

            <!-- Payments: Admin + Staff -->
            @if (role == "Admin" || role == "Staff")
            {
                <a class="side-link @(currentController == "Admin" && currentAction == "ManagePayment" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManagePayment">
                    <i class="bi-credit-card"></i> <span>Payments</span>
                </a>
            }

            <!-- Staffs: Admin only -->
            @if (role == "Admin")
            {
                <a class="side-link @(currentController == "Admin" && currentAction == "ManageStaff" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManageStaff">
                    <i class="bi bi-person-badge"></i> <span>Staffs</span>
                </a>
            }

            <!-- Drivers: Admin + Staff -->
            @if (role == "Admin" || role == "Staff")
            {
                <a class="side-link @(currentController == "Admin" && currentAction == "ManageDriver" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManageDriver">
                    <i class="bi bi-sign-turn-right"></i> <span>Drivers</span>
                </a>
            }

            <!-- Cashier: Admin + Staff -->
            @if (role == "Admin" || role == "Staff")
            {
                <a class="side-link @(currentController == "Admin" && currentAction == "Cashier" ? "active" : "")"
                   asp-controller="Admin" asp-action="Cashier">
                    <i class="bi bi-cash-stack"></i> <span>Cashier</span>
                </a>
            }

            <!-- Offers: Admin -->
            @if (role == "Admin" )
            {
                <a class="side-link @(currentController == "Admin" && currentAction == "ManageOffer" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManageOffer">
                    <i class="bi bi-gift"></i> <span>Offers</span>
                </a>
            }
            <!-- FAQs: Admin + Staff -->
            @if (role == "Admin" || role == "Staff")
            {
                <a class="side-link @(currentController == "Admin" && currentAction == "ManageFaq" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManageFaq">
                    <i class="bi bi-question-circle"></i> <span>FAQs</span>
                </a>
            }

            <!-- Reports: Admin + Staff -->
            @if (role == "Admin" || role == "Staff")
            {
                <a class="side-link @(currentController == "Admin" && currentAction == "Report" ? "active" : "")"
                   asp-controller="Admin" asp-action="Report">
                    <i class="bi bi-file-earmark-text"></i> <span>Reports</span>
                </a>
            }


          
   @*          <!-- Tracking -->
            <a class="side-link @(currentController == "Tracking" ? "active" : "")"
               asp-controller="Tracking" asp-action="Index">
                <i class="bi bi-geo-alt"></i> <span>Tracking</span>
            </a>

            <!-- Messages -->
            <a class="side-link @(currentController == "Messages" ? "active" : "")"
               asp-controller="Messages" asp-action="Index">
                <i class="bi bi-chat-dots"></i> <span>Messages</span>
            </a> *@

            <hr class="my-3">

            <!-- Logout -->
            <a asp-controller="Home" asp-action="Logout" class="side-link"><i class="bi bi-box-arrow-right"></i> <span>Logout</span></a>
        </nav>
    </aside>

    <!-- Main -->
    <div class="main">
        <!-- Topbar -->
        <div class="topbar">
            <div class="container-fluid py-2 px-3 d-flex align-items-center justify-content-between">

                <!-- Hamburger button for mobile -->
                <div class="d-lg-none">
                    <i class="bi bi-list hamburger" onclick="toggleSidebar()"></i>
                </div>

                <!-- Dashboard title -->
                <div class="fw-semibold">Dashboard</div>

                <!-- Right-side icons -->
                <div class="d-flex align-items-center gap-3">
                    <div class="d-none d-md-flex align-items-center border rounded-pill px-3 bg-white">
                        <i class="bi bi-search me-2 text-muted"></i>
                        <input class="form-control form-control-sm border-0" placeholder="Search…" />
                    </div>
                    <a class="text-secondary" href="#"><i class="bi bi-gear"></i></a>
                    <a class="text-secondary position-relative" href="@Url.Action("Notifications", "Admin")">
                        <i class="bi bi-bell fs-5"></i>
                        <span id="notif-dot"
                              class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle d-none">
                        </span>
                    </a>
                    <div class="dropdown">
                        <a class="d-flex align-items-center text-decoration-none" href="#" data-bs-toggle="dropdown">
                            <img class="avatar me-2" src="https://i.pravatar.cc/100?img=12" alt="Admin">
                            <div class="small">
                                @* <div class="fw-semibold" style="color: #1E56A0;">Abram Schleifer</div> *@

                              <div class="fw-semibold" style="color: #1E56A0;">@name</div>
                                <div class="text-muted">Admin</div>
                            </div>
                            <i class="bi bi-caret-down ms-2 text-muted"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a asp-controller="Home" asp-action="Index" class="dropdown-item">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Page content -->
        <main class="flex-grow-1">
            <div class="container-fluid py-3">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function toggleSidebar() {
            const sidebar = document.querySelector(".sidebar");
            const body = document.body;

            sidebar.classList.toggle("open");
            body.classList.toggle("sidebar-open");
        }

        // Close sidebar if overlay clicked
        document.body.addEventListener('click', function(e) {
            const sidebar = document.querySelector(".sidebar");
            const hamburger = document.querySelector(".hamburger");
            if(document.body.classList.contains('sidebar-open') && !sidebar.contains(e.target) && e.target !== hamburger) {
                sidebar.classList.remove('open');
                document.body.classList.remove('sidebar-open');
            }
        });
    </script>

    <script>
        async function fetchNotificationDot() {
            try {
                const response = await fetch('/Admin/GetNotificationCount');
                const hasNotifications = await response.json();
                const dot = document.getElementById('notif-dot');

                if (hasNotifications) {
                    dot.classList.remove("d-none"); // show red dot
                } else {
                    dot.classList.add("d-none"); // hide if none
                }
            } catch (e) {
                console.error("Error fetching notifications:", e);
            }
        }

        setInterval(fetchNotificationDot, 10000); // check every 10s
        fetchNotificationDot(); // run immediately
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
