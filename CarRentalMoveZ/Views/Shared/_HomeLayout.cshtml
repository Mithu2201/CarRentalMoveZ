<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalMoveZ-Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePanel.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRentalFrontEnd.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <!-- Bootstrap + Icons + AOS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Top bar -->
    <div class="top-bar  py-1 px-3 d-flex justify-content-between align-items-center">
        <div class="left">
            <i class="fas fa-envelope"></i> MoveZ@company.com &nbsp;&nbsp;
            <i class="fas fa-map-marker-alt"></i> TempleRd , Jaffna 01 , Srilanka
        </div>
        <div class="right">
               <a asp-controller="Account" asp-action="Login" class="text-white">
                    <i class="fas fa-user"></i> Log In
               </a>
               <a asp-controller="Account" asp-action="Register" class="text-white">
                <i class="fas"></i> / Register
            </a>
        </div>
            
      
    </div>

    <!-- Main Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Img/HeadLogo.png" alt="Logo" style="height:40px;" />
                    
                </a>

                <!-- Mobile toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav links -->
                <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")"
                               asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")"
                               asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Service" ? "active" : "")"
                               asp-controller="Home" asp-action="Service">Service</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "BrowseCar" ? "active" : "")"
                               asp-controller="Home" asp-action="BrowseCar">BrowseCar</a>
                        </li>
                    </ul>
                </div>
               
                <!-- Right button -->
                <div class="nav-right order-3 ms-auto">
                    <a asp-controller="Home" asp-action="BrowseCar" class="book-btn text-white">
                        <i class="fas fa-car me-1"></i> Book a Car
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Body -->
    @RenderSection("Banner", required: false)
    @RenderSection("About", required: false)
    @RenderSection("servicenew", required: false)
    @RenderSection("WhyChoose", required: false)
    @RenderSection("Service", required: false)
    @RenderSection("CarMenu", required: false)
    @RenderSection("BookingProcess", required: false)
    @RenderSection("Testimonials", required: false)
    @RenderSection("App", required: false)
    @RenderSection("blog", required: false)
   
   
    
   

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-light pt-5" style="background-color:black;">
        <div class="container">
            <div class="row">

                <!-- Logo + Description -->
                <div class="col-md-3 mb-4">
                    <div class="mb-3">
                        <img src="~/Img/Logo.png" alt="MoveZ Logo" class="mb-3" style="max-width:150px;" />
                    </div>
                    <p class="text-secondary">
                       No-12 Temple Rd ,</br> 
                       JAFFNA
                    </p>
                    <!-- Social Icons -->
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-page="/About" class="text-secondary text-decoration-none">>> About Us</a></li>
                        <li class="mb-2"><a asp-page="/Services" class="text-secondary text-decoration-none">>> Our Services</a></li>
                        <li class="mb-2"><a asp-page="/Blogs" class="text-secondary text-decoration-none">>> Our Cars</a></li>
                        <li class="mb-2"><a asp-page="/Faqs" class="text-secondary text-decoration-none">>> FAQs</a></li>
                        <li class="mb-2"><a asp-page="/Contact" class="text-secondary text-decoration-none">>> Contact Us</a></li>
                    </ul>
                </div>

                <!-- Recent Posts -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Recent Posts</h5>
                    <div class="d-flex mb-3">
                        <img src="~/Img/icon2.jpg" alt="Post 1" class="me-2 rounded" style="width:50px;height:50px;object-fit:cover;" />
                        <div>
                            <small class="text-secondary d-block">04 May, 25</small>
                            <a href="#" class="text-light text-decoration-none">Mitharsan Manipay</a>
                        </div>
                    </div>
                    <div class="d-flex">
                        <img src="~/Img/icon1.jfif" alt="Post 2" class="me-2 rounded" style="width:50px;height:50px;object-fit:cover;" />
                        <div>
                            <small class="text-secondary d-block">04 May, 25</small>
                            <a href="#" class="text-light text-decoration-none">S.Sutharsan ,Inuvil Jaffna</a>
                        </div>
                    </div>
                </div>

                <!-- Office Address + Newsletter -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Office Address</h5>
                    <p class="text-secondary mb-2"><i class="bi bi-envelope-fill me-2"></i> MoveZ@company.com</p>
                    <p class="text-secondary mb-3"><i class="bi bi-telephone-fill me-2"></i> +94 77 177 2092</p>

                    <form method="post" asp-page-handler="Subscribe" class="input-group mb-2">
                        <input type="email" class="form-control" name="Email" placeholder="Your email address" required />
                        <button class="btn text-light" type="submit" style="background-color:#1E56A0;">
                            <i class="bi bi-arrow-right"></i>
                        </button>
                    </form>
                    <div>
                        <input type="checkbox" id="privacy" class="form-check-input me-1" />
                        <label for="privacy" class="form-check-label small text-secondary">
                            I agree to the <a asp-page="/Privacy" class="text-decoration-none text-light">Privacy Policy</a>
                        </label>
                    </div>
                </div>

            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="text-center py-3" style="background-color:#1E56A0;">
            <small>
                © Copyright 2025 By MoveZ(Pvt)Ltd |
                <a asp-page="/Terms" class="text-light text-decoration-none">Terms & Condition</a> |
                <a asp-page="/Privacy" class="text-light text-decoration-none">Privacy Policy</a>
            </small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
