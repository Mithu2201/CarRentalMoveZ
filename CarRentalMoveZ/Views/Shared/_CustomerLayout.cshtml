<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalMoveZ-Customer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePanel.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRentalFrontEnd.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- Top bar -->
    <div class="top-bar bg-warning text-dark py-1 px-3 d-flex justify-content-between align-items-center">
        <div class="left">
            <i class="fas fa-envelope"></i> MoveZ@company.com &nbsp;&nbsp;
            <i class="fas fa-map-marker-alt"></i> TempleRd , Jaffna 01 , Srilanka
        </div>
        <div class="right d-flex align-items-center">
            <span class="me-3 fw-bold text-white">
                @Context.Session.GetString("UserName")
            </span>
               <a asp-controller="Home" asp-action="Index" class="text-white">
                    <i class="fas fa-user"></i> Log Out
               </a>
        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Customer" asp-action="Dashboard">
                    <img src="~/Img/Logo.PNG" alt="Logo" style="height:40px;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav links -->
                <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                            class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Dashboard">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")"
                            class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Customer" ? "active" : "")"
                            class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="MyBooking">My Book</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Payment" ? "active" : "")"
                            class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Payment">Payment</a>
                        </li>
                    </ul>
                </div>

                <div class="nav-right order-3 ms-auto">
                    <a href="/Booking" class="book-btn text-white">
                        <i class="fas fa-car me-1"></i> Book a Taxi
                    </a>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CarRentalFrontEnd - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
