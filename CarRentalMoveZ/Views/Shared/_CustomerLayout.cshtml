@{
    // Get current customer ID from session

    // Get unread notifications count from ViewBag, default to 0
    var unreadCount = ViewBag.UnreadCount ?? 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalMoveZ-Customer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePanel.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Customer.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/CarRentalFrontEnd.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

   

    <!-- Top bar -->
    <div class="top-bar text-white py-1 px-3 d-flex justify-content-between align-items-center">
        <div class="left">
            <i class="fas fa-envelope"></i> Opening Hours- 8:00 A.M - 9:00 P.M
        </div>
        <div class="right d-flex align-items-center">
            <!-- User Profile Image -->
            <img src="~/Img/client1.jpg"
                 alt="User"
                 class="rounded-circle me-2"
                 style="width:35px;height:35px;object-fit:cover;" />

            <!-- User Name -->
            <span class="me-3 fw-bold text-white">
                Welcome @Context.Session.GetString("UserName")
            </span>

            <!-- Bell Icon with Compact Notification Badge -->
            <a class="text-white flex-shrink-0 position-relative p-1 border border-white border-1 rounded-circle hover-shadow" href="@Url.Action("Notifications", "Customer")">
                <i class="bi bi-bell fs-6"></i> <!-- Reduced icon size -->
                <!-- Notification Badge -->
                @if (unreadCount > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size:0.65rem; padding:0.2em 0.4em;">
                        @unreadCount
                        <span class="visually-hidden">unread notifications</span>
                    </span>
                }
            </a>



            <!-- Compact Account Dropdown -->
            <div class="dropdown flex-shrink-1">
                <a class="d-flex align-items-center text-decoration-none text-white p-1 border border-white border-1 rounded-3 hover-shadow"
                   href="#" data-bs-toggle="dropdown" style="min-height: 1.75rem;">
                    <span class="fs-7 me-2 fw-semibold">Account</span> <!-- Smaller text -->
                    <i class="bi bi-caret-down text-white fs-7"></i> <!-- Smaller dropdown icon -->
                </a>
                <!-- Compact Dropdown Menu -->
                <ul class="dropdown-menu dropdown-menu-end bg-white shadow-lg rounded-3 mt-1" style="min-width: 150px;">
                    <li>
                        <a asp-controller="Home" asp-action="Logout" class="dropdown-item text-dark" style="padding: 0.5rem 1rem;">
                            <i class="bi bi-door-closed fs-7 me-2"></i> Log Out
                        </a>
                    </li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <a asp-controller="Customer" asp-action="Profile" class="dropdown-item text-dark" style="padding: 0.5rem 1rem;">
                            <i class="bi bi-gear-wide-connected fs-7 me-2"></i> Settings
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Customer" asp-action="Dashboard">
                    <img src="~/Img/HeadLogo.png" alt="Logo" style="height:40px;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav links -->
                <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Home" ? "active" : "") text-dark"
                               asp-area="" asp-controller="Customer" asp-action="Home">
                                <i class="bi bi-house-door-fill"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                            class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Dashboard">My View</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")"
                            class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Profile">Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "BookingDetails" ? "active" : "")"
                               class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="BookingDetails">My Rentals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "PaymentDetails" ? "active" : "")"
                               class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="PaymentDetails">Transactions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Car" ? "active" : "")"
                               class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Car">Browse Car</a>
                        </li>
                    </ul>
                </div>

                <div class="nav-right order-3 ms-auto">
                    <a asp-controller="Customer" asp-action="Car" class="book-btn text-white">
                        <i class="fas fa-car me-1"></i> Book a Car
                    </a>
                </div>

            </div>
        </nav>
    </header>

    <!-- Body -->
    @RenderSection("Banner", required: false)
    @RenderSection("About", required: false)
    @RenderSection("servicenew", required: false)
    @RenderSection("WhyChoose", required: false)
    @RenderSection("Service", required: false)
    @RenderSection("CarMenu", required: false)
    @RenderSection("BookingProcess", required: false)
    @RenderSection("Testimonials", required: false)
    @RenderSection("App", required: false)
    @RenderSection("blog", required: false)

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-light pt-5" style="background-color:black;">
        <div class="container">
            <div class="row">

                <!-- Logo + Description -->
                <div class="col-md-3 mb-4">
                    <div class="mb-3">
                        <img src="~/Img/Logo.png" alt="MoveZ Logo" class="mb-3" style="max-width:150px;" />
                    </div>
                    <p class="text-secondary">
                        No-12 Temple Rd ,</br>
                        JAFFNA
                    </p>
                    <!-- Social Icons -->
                    <div class="d-flex gap-2">
                        <a href="https://www.facebook.com" target="_blank" class="btn btn-sm btn-outline-light rounded-circle">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="https://twitter.com" target="_blank" class="btn btn-sm btn-outline-light rounded-circle">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="https://www.linkedin.com/in" target="_blank" class="btn btn-sm btn-outline-light rounded-circle">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a href="https://www.instagram.com" target="_blank" class="btn btn-sm btn-outline-light rounded-circle">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-controller="Home" asp-action="About" class="text-secondary text-decoration-none">>> About Us</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="Service" class="text-secondary text-decoration-none">>> Our Services</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="BrowseCar" class="text-secondary text-decoration-none">>> Our Cars</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="About" class="text-secondary text-decoration-none">>> FAQs</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="Contact" class="text-secondary text-decoration-none">>> Contact Us</a></li>
                    </ul>
                </div>

                <!-- Recent Posts -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Recent Posts</h5>
                    <div class="d-flex mb-3">
                        <img src="~/Img/icon2.jpg" alt="Post 1" class="me-2 rounded" style="width:50px;height:50px;object-fit:cover;" />
                        <div>
                            <small class="text-secondary d-block">04 May, 25</small>
                            <a href="#" class="text-light text-decoration-none">Mitharsan Manipay</a>
                        </div>
                    </div>
                    <div class="d-flex">
                        <img src="~/Img/icon1.jfif" alt="Post 2" class="me-2 rounded" style="width:50px;height:50px;object-fit:cover;" />
                        <div>
                            <small class="text-secondary d-block">04 May, 25</small>
                            <a href="#" class="text-light text-decoration-none">S.Sutharsan ,Inuvil Jaffna</a>
                        </div>
                    </div>
                </div>

                <!-- Office Address + Newsletter -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Office Address</h5>
                    <p class="text-secondary mb-2"><i class="bi bi-envelope-fill me-2"></i> MoveZ@company.com</p>
                    <p class="text-secondary mb-3"><i class="bi bi-telephone-fill me-2"></i> +94 77 177 2092</p>

                    <form method="get" asp-controller="Home" asp-action="Contact" class="input-group mb-2">
                        <input type="text" class="form-control" name="Name" placeholder="Your Name" required />
                        <button class="btn text-light" type="submit" style="background-color:#1E56A0;">
                            <i class="bi bi-arrow-right"></i>
                        </button>
                    </form>
                    <div>
                        <input type="checkbox" id="privacy" class="form-check-input me-1" />
                        <label for="privacy" class="form-check-label small text-secondary">
                            I agree to the <a asp-page="/Privacy" class="text-decoration-none text-light">Privacy Policy</a>
                        </label>
                    </div>
                </div>

            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="text-center py-3" style="background-color:#1E56A0;">
            <small>
                © Copyright 2025 By MoveZ(Pvt)Ltd |
                <a asp-page="/Terms" class="text-light text-decoration-none">Terms & Condition</a> |
                <a asp-page="/Privacy" class="text-light text-decoration-none">Privacy Policy</a>
            </small>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Customer.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_API_KEY&libraries=places"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_API_KEY&libraries=places&callback=initAutocomplete" async defer></script>

</body>
</html>
