<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalMoveZ-Customer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePanel.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Customer.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/CarRentalFrontEnd.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

   

    <!-- Top bar -->
    <div class="top-bar bg-warning text-dark py-1 px-3 d-flex justify-content-between align-items-center">
        <div class="left">
            <i class="fas fa-envelope"></i> MoveZ@company.com &nbsp;&nbsp;
            <i class="fas fa-map-marker-alt"></i> TempleRd , Jaffna 01 , Srilanka
        </div>
        <div class="right d-flex align-items-center">
            <!-- User Profile Image -->
            <img src="~/Img/client1.jpg"
                 alt="User"
                 class="rounded-circle me-2"
                 style="width:35px;height:35px;object-fit:cover;" />

            <!-- User Name -->
            <span class="me-3 fw-bold text-white">
                Welcome @Context.Session.GetString("UserName")
            </span>

            <!-- Logout -->
            <a asp-controller="Home" asp-action="Index" class="text-white">
                <i class="fas fa-sign-out-alt"></i> Log Out
            </a>
        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Customer" asp-action="Dashboard">
                    <img src="~/Img/HeadLogo.png" alt="Logo" style="height:40px;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav links -->
                <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                            class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Dashboard">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")"
                            class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Booking" ? "active" : "")"
                            class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="BookingDetails">My Book</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Payment" ? "active" : "")"
                            class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="PaymentDetails">Payment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "BrowseCar" ? "active" : "")"
                                asp-controller="Customer" asp-action="Car">BrowseCar</a>
                        </li>
                    </ul>
                </div>

                <div class="nav-right order-3 ms-auto">
                    <a asp-controller="Customer" asp-action="Car" class="book-btn text-white">
                        <i class="fas fa-car me-1"></i> Book a Car
                    </a>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-light pt-5" style="background-color:black;">
        <div class="container">
            <div class="row">

                <!-- Logo + Description -->
                <div class="col-md-3 mb-4">
                    <div class="mb-3">
                        <img src="~/Img/Logo.png" alt="MoveZ Logo" class="mb-3" style="max-width:150px;" />
                    </div>
                    <p class="text-secondary">
                        No-12 Temple Rd ,</br>
                        JAFFNA
                    </p>
                    <!-- Social Icons -->
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-page="/About" class="text-secondary text-decoration-none">>> About Us</a></li>
                        <li class="mb-2"><a asp-page="/Services" class="text-secondary text-decoration-none">>> Our Services</a></li>
                        <li class="mb-2"><a asp-page="/Blogs" class="text-secondary text-decoration-none">>> Our Cars</a></li>
                        <li class="mb-2"><a asp-page="/Faqs" class="text-secondary text-decoration-none">>> FAQs</a></li>
                        <li class="mb-2"><a asp-page="/Contact" class="text-secondary text-decoration-none">>> Contact Us</a></li>
                    </ul>
                </div>

                <!-- Recent Posts -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Recent Posts</h5>
                    <div class="d-flex mb-3">
                        <img src="~/Img/icon2.jpg" alt="Post 1" class="me-2 rounded" style="width:50px;height:50px;object-fit:cover;" />
                        <div>
                            <small class="text-secondary d-block">04 May, 25</small>
                            <a href="#" class="text-light text-decoration-none">Mitharsan Manipay</a>
                        </div>
                    </div>
                    <div class="d-flex">
                        <img src="~/Img/icon1.jfif" alt="Post 2" class="me-2 rounded" style="width:50px;height:50px;object-fit:cover;" />
                        <div>
                            <small class="text-secondary d-block">04 May, 25</small>
                            <a href="#" class="text-light text-decoration-none">S.Sutharsan ,Inuvil Jaffna</a>
                        </div>
                    </div>
                </div>

                <!-- Office Address + Newsletter -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Office Address</h5>
                    <p class="text-secondary mb-2"><i class="bi bi-envelope-fill me-2"></i> MoveZ@company.com</p>
                    <p class="text-secondary mb-3"><i class="bi bi-telephone-fill me-2"></i> +94 77 177 2092</p>

                    <form method="post" asp-page-handler="Subscribe" class="input-group mb-2">
                        <input type="email" class="form-control" name="Email" placeholder="Your email address" required />
                        <button class="btn text-light" type="submit" style="background-color:#1E56A0;">
                            <i class="bi bi-arrow-right"></i>
                        </button>
                    </form>
                    <div>
                        <input type="checkbox" id="privacy" class="form-check-input me-1" />
                        <label for="privacy" class="form-check-label small text-secondary">
                            I agree to the <a asp-page="/Privacy" class="text-decoration-none text-light">Privacy Policy</a>
                        </label>
                    </div>
                </div>

            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="text-center py-3" style="background-color:#1E56A0;">
            <small>
                © Copyright 2025 By MoveZ(Pvt)Ltd |
                <a asp-page="/Terms" class="text-light text-decoration-none">Terms & Condition</a> |
                <a asp-page="/Privacy" class="text-light text-decoration-none">Privacy Policy</a>
            </small>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_API_KEY&libraries=places"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_API_KEY&libraries=places&callback=initAutocomplete" async defer></script>
</body>
</html>
