@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalMoveZ-Home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Customer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePanel.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRentalFrontEnd.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>


<div class="booking-form-container">
    <h2 class="page-title">Create Booking</h2>

    <form method="post" class="booking-form">
        <div class="form-group">
            <label class="form-label">Car</label>
            <!-- Commented out model binding -->
            @* <select asp-for="CarId" class="form-control" asp-items="Model.CarList"> *@
            <select name="CarId" class="form-control">
                <option value="">-- Select Car --</option>
                <option value="1">Toyota Corolla</option>
                <option value="2">Honda Civic</option>
                <option value="3">Nissan Sunny</option>
            </select>
            @* <span asp-validation-for="CarId" class="text-danger"></span> *@
        </div>

        <div class="form-group">
            <label class="form-label">Customer</label>
            <!-- Commented out model binding -->
            @* <select asp-for="UserId" class="form-control" asp-items="Model.UserList"> *@
            <select name="UserId" class="form-control">
                <option value="">-- Select Customer --</option>
                <option value="1">John Doe</option>
                <option value="2">Jane Smith</option>
                <option value="3">Michael Lee</option>
            </select>
            @* <span asp-validation-for="UserId" class="text-danger"></span> *@
        </div>

        <div class="form-group">
            <label class="form-label">Start Date</label>
            <!-- Hard-coded default -->
            <input name="StartDate" type="date" value="2025-09-05" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">End Date</label>
            <!-- Hard-coded default -->
            <input name="EndDate" type="date" value="2025-09-10" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label">Status</label>
            <select name="Status" class="form-control">
                <option>Pending</option>
                <option selected>Confirmed</option>
                <option>Cancelled</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-label">Location</label>
            <input name="Location" class="form-control" value="Colombo Airport" />
        </div>

        <div class="form-group">
            <label class="form-label">Payment</label>
            <input name="Payment" type="number" step="0.01" value="1500.00" class="form-control" />
        </div>

        <button type="submit" class="btn-primary-custom">Create Booking</button>
    </form>
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @section Scripts {
        <script>
            console.log("Profile page script running");
        </script>
    }

</body>
</html>
