@model IEnumerable<CarRentalMoveZ.DTOs.BookingDTO>
@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container py-4">

    <h2 class="mb-4">My Bookings</h2>

    <!-- Filter + Search Controls -->
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <!-- Status Filter -->
        <select id="statusFilter" class="form-select w-auto">
            <option value="ALL">All Statuses</option>
            <option value="Assigned">Assigned</option>
            <option value="Pending">Pending</option>
            <option value="Cancelled">Cancelled</option>
        </select>

        <!-- Search Box -->
        <div class="input-group w-auto">
            <input type="text" id="searchInput" class="form-control" placeholder="Search by Car, Location, Driver...">
            <button class="btn btn-primary" id="searchBtn">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </div>

    <!-- Bookings Table -->
    <table class="table table-hover" id="bookingsTable">
        <thead>
            <tr>
                <th>Car</th>
                <th>Dates</th>
                <th>Location</th>
                <th>Payment</th>
                <th>Status</th>
                <th>Driver Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var booking in Model)
                {
                    <tr data-status="@booking.Status.ToUpper()">
                        <td>@booking.CarModel</td>
                        <td>
                            @booking.StartDate.ToString("MMM dd, yyyy") -
                            @booking.EndDate.ToString("MMM dd, yyyy")
                        </td>
                        <td>@booking.Location</td>
                        <td>@booking.Payment.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-LK"))</td>
                        <td>
                            <span class="badge bg-@(booking.Status == "Confirmed" ? "success" : booking.Status == "Pending" ? "warning" : "secondary")">
                                @booking.Status
                            </span>
                        </td>
                        <td>@booking.DriverStatus</td>
                        <td>
                            @if (booking.Status == "Pending")
                            {
                                <button type="button" class="btn btn-danger btn-sm"
                                        onclick="confirmCancel(@booking.BookingId)">
                                    Cancel
                                </button>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="7" class="text-center text-muted">No bookings yet.</td></tr>
            }
        </tbody>
    </table>
</div>