    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const faqBtn = document.getElementById("faq-btn");
            const modal = document.getElementById("faqModal");
            const closeBtn = modal.querySelector(".faq-close");
            const faqContent = document.getElementById("faqContent");

            faqBtn.addEventListener("click", function() {
                modal.style.display = "block";

                // Load FAQ content via AJAX
                fetch("/Home/Faq")
                    .then(res => res.text())
                    .then(html => {
                        const parser = new DOMParser();
                        const doc = parser.parseFromString(html, "text/html");
                        const faqHtml = doc.querySelector(".faq-container")?.outerHTML || "<p>No FAQs available.</p>";
                        faqContent.innerHTML = faqHtml;

                        // Initialize toggle for dynamically loaded content
                        faqContent.querySelectorAll('.faq-question').forEach(item => {
                            item.addEventListener('click', () => {
                                const answer = item.nextElementSibling;
                                const toggle = item.querySelector('.faq-toggle');

                                if(answer.style.height && answer.style.height !== '0px') {
                                    answer.style.height = '0';
                                    answer.style.paddingTop = '0';
                                    answer.style.paddingBottom = '0';
                                    toggle.innerText = '+';
                                } else {
                                    answer.style.height = answer.scrollHeight + 'px';
                                    answer.style.paddingTop = '1px';
                                    answer.style.paddingBottom = '45px';
                                    toggle.innerText = '−';
                                }
                            });
                        });
                    });
            });

            closeBtn.addEventListener("click", () => modal.style.display = "none");
            window.addEventListener("click", e => { if(e.target === modal) modal.style.display = "none"; });
        });
    </script>



