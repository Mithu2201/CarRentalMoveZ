    @section BookingProcess {
        <section class="py-5" style="background: #163172;">
            <div class="container text-center">
                <span class="small fw-bold" style="color: #fff;">How It Works</span>
                <h2 class="fw-bold display-6 mb-5" style="color: #f6f6f6;">Easy Booking Process</h2>
                <div class="row g-4">
                    <div class="col-md-3 step" data-aos="fade-up" data-aos-delay="400">
                        <div class="step-icon"><i class="fa-solid fa-car"></i></div>
                        <h6 class="text-light">Pick Your Car</h6>
                    </div>
                    <div class="col-md-3 step" data-aos="fade-up">
                        <div class="step-icon"><i class="fa-solid fa-mobile-screen"></i></div>
                        <h6 class="text-light">Choose Destination</h6>
                    </div>
                    <div class="col-md-3 step" data-aos="fade-up" data-aos-delay="200">
                        <div class="step-icon"><i class="fa-solid fa-calendar-check"></i></div>
                        <h6 class="text-light">Select Date</h6>
                    </div>            
                    <div class="col-md-3 step" data-aos="fade-up" data-aos-delay="600">
                        <div class="step-icon"><i class="fa-solid fa-credit-card"></i></div>
                        <h6 class="text-light">Confirm & Pay</h6>
                    </div>
                </div>
            </div>
        </section>
    }
    @section CarMenu {
        <section class="py-5" style="background: #fff;">
