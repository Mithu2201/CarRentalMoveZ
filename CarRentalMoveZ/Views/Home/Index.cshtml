<body>
    @section Banner {
        <section class="hero">
            <div class="container position-relative">
                <div class="row align-items-center flex-column-reverse flex-lg-row">
                    <!-- Left Text -->
                    <div class="col-lg-7 col-md-12 text-center text-lg-start hero-text">
                        <h1 class="fw-bold mb-3">
                            Book Your Car <br />
                            <span>Anywhere, Anytime</span>
                        </h1>
                        <p class="lead">
                            Fast, reliable and affordable car booking service at your fingertips.
                        </p>
                        <a asp-controller="Home" asp-action="BrowseCar" class="btn book-btn mt-3 shadow">
                            <i class="fa-solid fa-taxi me-2"></i> Book Now
                        </a>
                    </div>
                    <!-- Right Car -->
                    <div class="col-lg-5 col-12 text-center mt-4 mt-lg-0 hero-car">
                        <img src="/Img/bmw.png" alt="Taxi Car" class="hero-img" />
                    </div>
                </div>
            </div>
            <!-- Search Box -->
            <div class="container position-absolute start-50 translate-middle-x search-box"
                 style="bottom: -10px; z-index: 10; max-width: 1200px;">
                <div class="bg-white shadow-lg p-4" style="border-top-left-radius: 20px; border-top-right-radius: 20px;">
                    <div class="row g-3 align-items-stretch">
                        <!-- Destination -->
                        <div class="col-md-3 col-12 d-flex flex-column">
                            <label class="form-label text-muted small">Your Destination</label>
                            <input type="text" id="autocomplete" class="form-control flex-fill" placeholder="Enter destination" />
                            <div id="suggestions"></div>
                        </div>

                        <!-- Start Date -->
                        <div class="col-md-2 col-6 d-flex flex-column">
                            <label class="form-label text-muted small">When to Start</label>
                            <input type="date" id="startDate" class="form-control flex-fill" />
                        </div>
                        <!-- End Date -->
                        <div class="col-md-2 col-6 d-flex flex-column">
                            <label class="form-label text-muted small">When to Finish</label>
                            <input type="date" id="endDate" class="form-control flex-fill" />
                        </div>
                        <!-- People -->
                        <div class="col-md-3 col-12 d-flex flex-column">
                            <label class="form-label text-muted small">People</label>
                            <input type="number"
                                   id="people"
                                   class="form-control flex-fill"
                                   placeholder="Enter No of Passengers" />
                        </div>
                        <!-- Button -->
                        <div class="col-md-2 col-12 d-flex flex-column">
                            <label class="form-label text-muted small d-none d-md-block">&nbsp;</label>
                            <button id="searchBtn" class="btn flex-fill fw-bold search-btn d-flex justify-content-center align-items-center">
                                Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    <!-- Floating FAQ Button -->
    <a href="javascript:void(0)" id="faq-btn" class="faq-float">
        <i class="bi bi-headset"></i>
    </a>
    <div id="faqModal" class="faq-modal">
        <div class="faq-modal-content">
            <span class="faq-close">&times;</span>
            <h2 class="faq-title">Frequently Asked Questions</h2>
            <div id="faqContent"></div> <!-- FAQs will be loaded here dynamically -->
        </div>
    </div>


    @section About {
