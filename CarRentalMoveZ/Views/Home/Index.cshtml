    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, #FFFFFF, #E9F0FB, #C8DAF2);
            background-size: 400% 400%;
            animation: gradientMove 14s ease-in-out infinite;
            min-height: 85vh;
            padding: 80px 0 120px;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        /* Diagonal gradient motion */
        @@keyframes gradientMove {
            0% {
                background-position: 0% 0%;
            }

            50% {
                background-position: 100% 100%;
            }

            100% {
                background-position: 0% 0%;
            }
        }

        /* Decorative floating circles */
        .hero::before,
        .hero::after {
            content: "";
            position: absolute;
            border-radius: 50%;
            background: rgba(30, 86, 160, 0.1);
            z-index: 0;
            animation: floatShapes 12s ease-in-out infinite alternate;
        }

        .hero::before {
            width: 280px;
            height: 280px;
            top: -100px;
            left: -100px;
        }

        .hero::after {
            width: 420px;
            height: 420px;
            bottom: -160px;
            right: -160px;
        }

        /* Shape floating animation */
        @@keyframes floatShapes {
            0% {
                transform: translate(0, 0) scale(1);
                opacity: 0.6;
            }

            50% {
                transform: translate(40px, 30px) scale(1.12);
                opacity: 0.85;
            }

            100% {
                transform: translate(-25px, -20px) scale(1);
                opacity: 0.65;
            }
        }


        @@keyframes pulseShape {
            from {
                transform: scale(1);
                opacity: 0.45;
            }

            to {
                transform: scale(1.18);
                opacity: 0.75;
            }
        }

        .hero h1 {
            font-weight: 700;
            font-size: 3rem;
            color: #163172;
            line-height: 1.12;
        }

            .hero h1 span {
                color: #1E56A0;
            }

        .hero p {
            font-size: 1.15rem;
            color: #333;
            margin-bottom: 18px;
        }

        /* Buttons */
        .book-btn {
            background: linear-gradient(135deg, #1E56A0, #3E7BDA);
            color: #fff;
            border-radius: 50px;
            padding: 12px 40px;
            font-size: 1.05rem;
            transition: transform .32s ease, box-shadow .32s ease, background .32s ease;
            position: relative;
            overflow: hidden;
            border: 0;
        }

            .book-btn:hover {
                background: linear-gradient(135deg, #3E7BDA, #6CAAF7);
                box-shadow: 0 14px 30px rgba(62,123,218,0.18);
                transform: translateY(-4px);
            }

            .book-btn::after {
                content: "";
                position: absolute;
                top: -10%;
                left: -120%;
                width: 40%;
                height: 120%;
                background: rgba(255,255,255,0.28);
                transform: skewX(-18deg);
                transition: left .55s cubic-bezier(.2,.9,.2,1);
            }

            .book-btn:hover::after {
                left: 120%;
            }

        .search-btn {
            background: linear-gradient(135deg, #1E56A0, #3E7BDA);
            color: #fff;
            border-radius: 10px;
            transition: transform .28s ease, box-shadow .28s ease, background .28s ease;
            border: 0;
        }

            .search-btn:hover {
                background: linear-gradient(135deg, #3E7BDA, #6CAAF7);
                box-shadow: 0 10px 24px rgba(62,123,218,0.14);
                transform: translateY(-2px);
            }

        /* Entrance Animations */
        .hero-text > * {
            opacity: 0;
            transform: translateX(-30px);
        }

        .hero-car {
            opacity: 0;
            transform: translateX(80px);
        }

            .hero-car .hero-img {
                width: 120%; /* makes it larger than the column */
                max-width: 1400px; /* prevents it from being too huge on big monitors */
                height: auto;
            }


        /*    .search-box {
                            opacity: 0;
                            transform: translatey(40px);
                            transition: opacity 0.6s ease, transform 0.6s ease;
                            transition-delay: 0.8s;
                        }  */
        .hero-text.animate h1 {
            animation: slideInLeft 0.9s cubic-bezier(.2,.9,.2,1) forwards 0s;
        }

        .hero-text.animate p {
            animation: slideInLeft 0.9s cubic-bezier(.2,.9,.2,1) forwards 0.2s;
        }

        .hero-text.animate .book-btn {
            animation: slideInLeft 0.9s cubic-bezier(.2,.9,.2,1) forwards 0.45s;
        }

        .hero-car.animate {
            animation: slideInRight 1.0s cubic-bezier(.2,.9,.2,1) forwards;
        }

            .hero-car.animate img {
                animation: floatCar 4.5s ease-in-out 1.05s infinite;
            }

        /* SMOOTH Search box animation */
        /*   .search-box.animate {
                            opacity: 1;
                            transform: translateY(0);
                        } */

        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-80px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(80px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes slideUpBounce {
            0% {
                opacity: 0;
                transform: translateY(80px);
            }

            60% {
                opacity: 1;
                transform: translateY(-10px);
            }

            80% {
                transform: translateY(4px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes floatCar {
            0% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-12px);
            }

            100% {
                transform: translateY(0);
            }
        }

        /* Align search box elements */
        .search-box .form-control,
        .search-box .form-select,
        .search-box .btn {
            height: 44px;
            line-height: 1;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .hero h1 {
                font-size: 2.4rem;
            }
        }

        @@media (max-width: 768px) {
            .hero {
                padding: 60px 20px 140px;
                text-align: center;
                min-height: 72vh;
            }

                .hero h1 {
                    font-size: 2.0rem;
                }

                .hero p {
                    font-size: 1rem;
                }

            .hero-text > * {
                transform: translateX(0);
            }

            .hero-text, .hero-car {
                text-align: center;
            }

            .search-box {
                left: 50% !important;
                transform: translateX(-50%) !important;
            }
        }

    </style>
    <style>


