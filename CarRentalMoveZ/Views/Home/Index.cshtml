@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DriveEasy - Car Booking Service</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- AOS CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-btn: #1E56A0; /* Button / accents */
            --dark-bg: #163172; /* Deep navy */
            --light-bg: #F6F6F6; /* Page background */
            --card-bg: #D6E4F0; /* Cards / light sections */
            --text-light: #ffffff;
            --text-dark: #163172;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: var(--light-bg);
            color: var(--text-dark);
            overflow-x: hidden;
        }
        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, #FFFFFF, #E9F0FB, #C8DAF2);
            background-size: 400% 400%;
            animation: gradientMove 14s ease-in-out infinite;
            min-height: 85vh;
            padding: 80px 0 120px;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
        }
        /* Diagonal gradient motion */
        @@keyframes gradientMove {
            0%

        {
            background-position: 0% 0%;
        }

        50% {
            background-position: 100% 100%;
        }

        100% {
            background-position: 0% 0%;
        }

        }
        /* Decorative floating circles */
        .hero::before,
        .hero::after {
            content: "";
            position: absolute;
            border-radius: 50%;
            background: rgba(30, 86, 160, 0.1);
            z-index: 0;
            animation: floatShapes 12s ease-in-out infinite alternate;
        }

        .hero::before {
            width: 280px;
            height: 280px;
            top: -100px;
            left: -100px;
        }

        .hero::after {
            width: 420px;
            height: 420px;
            bottom: -160px;
            right: -160px;
        }
        /* Shape floating animation */
        @@keyframes floatShapes {
            0%

        {
            transform: translate(0, 0) scale(1);
            opacity: 0.6;
        }

        50% {
            transform: translate(40px, 30px) scale(1.12);
            opacity: 0.85;
        }

        100% {
            transform: translate(-25px, -20px) scale(1);
            opacity: 0.65;
        }

        }
        @@keyframes pulseShape {
            from

        {
            transform: scale(1);
            opacity: 0.45;
        }

        to {
            transform: scale(1.18);
            opacity: 0.75;
        }

        }

        .hero h1 {
            font-weight: 700;
            font-size: 3.5rem;
            color: #163172;
            line-height: 1.15;
        }

            .hero h1 span {
                color: #1E56A0;
            }

        .hero p {
            font-size: 1.25rem;
            color: #333;
            margin-bottom: 18px;
        }
        /* Buttons */
        .book-btn {
            position: relative;
            display: inline-block;
            font-weight: 700;
            text-decoration: none;
            text-transform: uppercase;
            clip-path: polygon(8% 0, 100% 0, 92% 100%, 0 100%);
            z-index: 1;
            background: linear-gradient(135deg, #1E56A0, #3E7BDA);
            color: #fff;
            border-radius: 50px;
            padding: 14px 46px;
            font-size: 1.2rem;
            transition: transform .32s ease, box-shadow .32s ease, background .32s ease;
            overflow: hidden;
            border: 0;
        }

            .book-btn:hover {
                background: linear-gradient(135deg, #3E7BDA, #6CAAF7);
                box-shadow: 0 14px 30px rgba(62,123,218,0.18);
                transform: translateY(-4px);
                color: black !important;
                border-color: #1E56A0;
            }

            .book-btn i {
                margin-right: 10px;
            }

            .book-btn::after {
                content: "";
                position: absolute;
                top: -10%;
                left: -120%;
                width: 40%;
                height: 120%;
                background: rgba(255,255,255,0.28);
                transform: skewX(-18deg);
                transition: left .55s cubic-bezier(.2,.9,.2,1);
            }

            .book-btn:hover::after {
                left: 120%;
            }

        .search-btn {
            background: linear-gradient(135deg, #1E56A0, #3E7BDA);
            color: #fff;
            border-radius: 10px;
            transition: transform .28s ease, box-shadow .28s ease, background .28s ease;
            border: 0;
        }

            .search-btn:hover {
                background: linear-gradient(135deg, #3E7BDA, #6CAAF7);
                box-shadow: 0 10px 24px rgba(62,123,218,0.14);
                transform: translateY(-2px);
            }
        /* Entrance Animations */
        .hero-text > * {
            opacity: 0;
            transform: translateX(-30px);
        }

        .hero-car {
            opacity: 0;
            transform: translateX(80px);
        }

            .hero-car .hero-img {
                width: 200%;
                max-width: 1500px;
                height: auto;
				margin-left: -150px;
            }

        .hero-text.animate h1 {
            animation: slideInLeft 0.9s cubic-bezier(.2,.9,.2,1) forwards;
        }

        .hero-text.animate p {
            animation: slideInLeft 0.9s cubic-bezier(.2,.9,.2,1) forwards 0.2s;
        }

        .hero-text.animate .book-btn {
            animation: slideInLeft 0.9s cubic-bezier(.2,.9,.2,1) forwards 0.45s;
        }

        .hero-car.animate {
            animation: slideInRight 1.0s cubic-bezier(.2,.9,.2,1) forwards;
        }

            .hero-car.animate img {
                animation: floatCar 4.5s ease-in-out 1.05s infinite;
            }
        /* Keyframes */
        @@keyframes slideInLeft {
            from

        {
            opacity: 0;
            transform: translateX(-80px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }
        @@keyframes slideInRight {
            from

        {
            opacity: 0;
            transform: translateX(80px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }
        @@keyframes floatCar {
            0%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-12px);
        }

        100% {
            transform: translateY(0);
        }

        }
        /* Align search box elements */
        .search-box .form-control,
        .search-box .form-select,
        .search-box .btn {
            height: 44px;
            line-height: 1;
        }
        /* Responsive */
        @@media (max-width: 992px) {
            .hero h1

        {
            font-size: 2.6rem;
        }

        .hero p {
            font-size: 1.15rem;
        }

        .book-btn {
            font-size: 1.1rem;
            padding: 12px 36px;
        }

        .hero-car .hero-img {
            width: 90%;
            max-width: 520px;
            margin: 0 auto;
        }

        }
        @@media (max-width: 768px) {
            .hero

        {
            padding: 50px 20px 140px;
            text-align: center;
            min-height: auto;
        }

        .hero h1 {
            font-size: 2.3rem;
        }

        .hero p {
            font-size: 1.05rem;
        }

        .book-btn {
            font-size: 1rem;
            padding: 12px 30px;
        }

        .hero-car .hero-img {
            width: 100%;
            max-width: 480px;
        }

        .hero-card {
            padding: 30px 20px;
        }

        .taxi-image {
            position: static;
            width: 100%;
            height: 100%;
            transform: none;
            margin-top: 30px;
        }

        .section-title {
            font-size: 36px;
        }

        .service-card {
            height: auto;
        }

        .feature-item {
            margin-bottom: 40px;
        }

        #servicesContainer {
            display: flex;
            flex-wrap: nowrap;
            overflow-x: auto;
            gap: 15px;
            padding-bottom: 15px;
            scrollbar-width: thin;
        }

            #servicesContainer::-webkit-scrollbar {
                height: 8px;
            }

            #servicesContainer::-webkit-scrollbar-thumb {
                background: var(--primary-btn);
                border-radius: 4px;
            }

            #servicesContainer .col-lg-4 {
                flex: 0 0 80%;
                max-width: 80%;
            }

        }
        @@media (max-width: 576px) {
            .hero h1

        {
            font-size: 0.01rem;
        }

        .hero p {
            font-size: 0.01rem;
        }

        .hero-car .hero-img {
            width: 380%;
            max-width: 400px;
        }

        }
        /* Alternative moving bar with marquee text */
        .moving-bar-alt {
            width: 100%;
            background: linear-gradient(90deg, #1E56A0, #3E7BDA);
            overflow: hidden;
            white-space: nowrap;
            color: #fff;
            font-weight: 600;
            font-size: 1rem;
            padding: 10px 0;
            position: relative;
        }

            .moving-bar-alt .marquee {
                display: inline-block;
                padding-left: 100%;
                animation: marqueeMove 15s linear infinite;
            }

                .moving-bar-alt .marquee span {
                    padding-right: 100%;
                }
        @@keyframes marqueeMove {
            0%

        {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-100%);
        }

        }
        /* Testimonials */
        .testimonial-card {
            border-radius: 15px;
            background: #fff;
            padding: 20px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        }

            .testimonial-card img {
                width: 60px;
                height: 60px;
                border-radius: 50%;
                object-fit: cover;
            }
        /* Booking Process */
        .step {
            text-align: center;
            padding: 20px;
        }

        .step-icon {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: #fff;
            color: #1E56A0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: auto;
            margin-bottom: 15px;
        }
        /* Car Card Animations */
        .car-card {
            background: #fff;
            border-radius: 15px;
            transition: transform 0.35s ease, box-shadow 0.35s ease;
            opacity: 0;
            transform: translateY(30px);
            animation: fadeUp 1s forwards;
        }

            .car-card:hover {
                transform: translateY(-8px) scale(1.03);
                box-shadow: 0 20px 40px rgba(30, 86, 160, 0.2);
            }

            .car-card img {
                transition: transform 0.4s ease;
            }

            .car-card:hover img {
                transform: scale(1.05);
            }

        .car-btn {
            transition: background 0.3s ease, transform 0.3s ease;
        }

            .car-btn:hover {
                background: #3E7BDA;
                transform: translateY(-2px);
            }
        @@keyframes fadeUp {
            0%

        {
            opacity: 0;
            transform: translateY(30px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }

        }
        /* App Section */
        .app-btn {
            background: linear-gradient(135deg, #1E56A0, #3E7BDA);
            color: #fff !important;
            border-radius: 12px;
            transition: all 0.3s ease;
            min-width: 200px;
            text-align: left;
        }

            .app-btn:hover {
                background: linear-gradient(135deg, #3E7BDA, #6CAAF7);
                box-shadow: 0 14px 30px rgba(62,123,218,0.18);
                transform: translateY(-4px);
            }

            .app-btn small {
                font-size: 12px;
                font-weight: 500;
                opacity: 0.9;
            }

        .app-mockup {
            max-height: 400px;
            transition: transform 0.4s ease;
        }

            .app-mockup:hover {
                transform: scale(1.05);
            }
        /* Blog Section */
        .blog-card {
            border-radius: 15px;
            overflow: hidden;
            transition: transform .3s ease, box-shadow .3s ease;
        }

            .blog-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 24px rgba(30, 86, 160, 0.15);
            }

        .date-badge {
            position: absolute;
            top: 12px;
            left: 12px;
            background: #1E56A0;
            color: #fff;
            border-radius: 8px;
            padding: 6px 10px;
            font-weight: 600;
        }

            .date-badge .day {
                font-size: 18px;
                line-height: 1;
                display: block;
            }

            .date-badge .month {
                font-size: 12px;
                text-transform: uppercase;
            }

        .blog-link {
            color: #163172;
            font-weight: 600;
            text-decoration: none;
            transition: color .3s ease;
        }

            .blog-link:hover {
                color: #1E56A0;
            }

        .blog-btn {
            background: linear-gradient(135deg, #1E56A0, #3E7BDA);
            color: #fff !important;
            border-radius: 10px;
            padding: 10px 24px;
            font-weight: 600;
            font-size: 15px;
            transition: all 0.3s ease;
            display: inline-block;
            text-decoration: none;
            min-width: 160px;
            text-align: center;
            opacity: 0;
            transform: translateY(30px);
        }

            .blog-btn:hover {
                background: linear-gradient(135deg, #3E7BDA, #6CAAF7);
                box-shadow: 0 10px 25px rgba(62,123,218,0.18);
                transform: translateX(5px);
            }

            .blog-btn.animate {
                animation: fadeUp 0.8s cubic-bezier(.2,.9,.2,1) forwards;
            }
        /* Title Animations */
        .fleet-title {
            font-size: 3rem;
            color: #1E56A0;
            opacity: 0;
        }

        .fleet-subtitle {
            font-size: 2.5rem;
            color: #163172;
            opacity: 0;
        }
        /* Service Section (Merged) */
        .hero-section {
            position: relative;
            padding: 80px 0;
            background: var(--dark-bg);
            color: var(--text-light);
        }

        .hero-card {
            background: var(--card-bg);
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            position: relative;
            overflow: visible;
        }

            .hero-card::before {
                content: "";
                position: absolute;
                top: 15px;
                left: 15px;
                width: 100%;
                height: 100%;
                border: 3px solid #fff;
                border-top: none;
                border-left: none;
                border-radius: 15px;
                z-index: 0;
            }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .feature-item {
            text-align: center;
            margin-bottom: 30px;
            color: var(--text-dark);
        }

        .feature-icon {
            width: 70px;
            height: 70px;
            background: var(--primary-btn);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 24px;
            color: var(--text-light);
            transition: transform 0.3s ease;
        }

            .feature-icon:hover {
                transform: scale(1.1);
            }

        .taxi-image {
            position: absolute;
            right: 0px;
            top: 0.001%;
            width: 35%;
            height: 100%;
            z-index: 3;
            clip-path: polygon(15% 0, 100% 0, 100% 100%, 0% 100%);
        }

        .services-section {
            padding: 20px 0;
            background: linear-gradient(to bottom, var(--dark-bg) 65%, #fff 60%);
            min-height: auto;
        }

        .section-subtitle {
            color: var(--text-light);
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 15px;
            position: relative;
        }

            .section-subtitle::before {
                content: '';
                position: absolute;
                left: -30px;
                top: 50%;
                width: 20px;
                height: 3px;
                background: var(--primary-btn);
                transform: translateY(-50%);
            }

        .section-title {
            font-size: 48px;
            font-weight: bold;
            line-height: 1.2;
            margin-bottom: 30px;
            color: var(--text-light);
        }

        .service-card {
            background: var(--card-bg);
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            margin-bottom: 30px;
            position: relative;
            height: 450px;
            color: var(--text-light);
        }

            .service-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(30, 86, 160, 0.2);
            }

        .service-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .service-card:hover .service-image {
            transform: scale(1.05);
        }

        .service-content {
            padding: 25px;
            position: relative;
        }

        .service-icon {
            width: 50px;
            height: 50px;
            background: var(--primary-btn);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            color: var(--text-light);
            font-size: 20px;
        }

        .service-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
            color: var(--text-dark);
        }

        .explore-btn {
            background: transparent;
            border: 2px solid var(--primary-btn);
            color: var(--primary-btn);
            padding: 10px 25px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .explore-btn:hover {
                background: var(--primary-btn);
                color: var(--text-light);
                transform: translateX(5px);
            }


        .custom-btn {
            border: 2px solid #1E56A0;
            color: #1E56A0;
            background-color: transparent;
        }

            .custom-btn:hover {
                background-color: #1E56A0;
                color: #fff;
            }

        .service-number {
            position: absolute;
            right: 20px;
            bottom: 20px;
            font-size: 48px;
            font-weight: bold;
            color: rgba(30, 86, 160, 0.2);
        }
        /* Navigation arrows */
        .nav-arrows {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
            margin-top: 30px;
        }

        .nav-arrow {
            width: 50px;
            height: 50px;
            background: var(--primary-btn);
            border: none;
            border-radius: 5px;
            color: var(--text-light);
            font-size: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .nav-arrow:hover {
                transform: scale(1.1);
                box-shadow: 0 5px 15px rgba(30, 86, 160, 0.3);
            }

        #suggestions {
            position: absolute; /* Take out of the flow */
            top: 100%; /* Below the input */
            left: 0;
            right: 0; /* Make width match input */
            z-index: 1000;
            background: #fff;
            border: 1px solid #ccc;
            max-height: 200px;
            overflow-y: auto;
            border-radius: 0 0 10px 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        }

        /* Individual suggestion item */
        .suggestion-item {
            padding: 8px 12px;
            cursor: pointer;
        }

            .suggestion-item:hover, .suggestion-item.active {
                background-color: #007bff;
                color: white;
            }


        /* Floating button */
        .faq-float {
            position: fixed;
            bottom: 25px;
            right: 25px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: #1E56A0;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            font-weight: bold;
            text-decoration: none;
            box-shadow: 0 6px 15px rgba(0,0,0,0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            z-index: 1000;
            animation: pulse 2.5s infinite;
        }

            .faq-float:hover {
                transform: translateY(-4px) scale(1.05);
                box-shadow: 0 10px 25px rgba(0,0,0,0.25);
                background-color: #163172;
            }

        @@keyframes pulse {
            0%

        {
            box-shadow: 0 0 0 0 rgba(30, 86, 160, 0.5);
        }

        70% {
            box-shadow: 0 0 0 15px rgba(30, 86, 160, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(30, 86, 160, 0);
        }

        }

        /* Modal */
        .faq-modal {
            display: none;
            position: fixed;
            z-index: 2000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow-y: auto;
            background-color: rgba(0,0,0,0.6);
        }

        .faq-modal-content {
            background: #fff;
            margin: 5% auto;
            padding: 20px;
            border-radius: 12px;
            width: 90%;
            max-width: 800px;
            max-height: 80vh;
            overflow-y: auto;
            animation: fadeIn 0.3s ease-in-out;
            box-shadow: 0 6px 20px rgba(0,0,0,0.2);
        }

        .faq-close {
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            color: #333;
        }

            .faq-close:hover {
                color: #e74c3c;
            }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* FAQ styles */
        .faq-container {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            background-color: #F6F6F6;
            border-radius: 12px;
        }

        .faq-title {
            text-align: center;
            font-size: 2rem;
            color: #1E56A0;
            margin-top: 30px;
            margin-bottom: 0px;
            font-weight: 700;
        }

        .faq-item {
            background-color: #D6E4F0;
            border-radius: 10px;
            margin-bottom: 15px;
            overflow: hidden;
            box-shadow: 0 3px 8px rgba(0,0,0,0.1);
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .faq-item:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(0,0,0,0.15);
            }

        .faq-question {
            padding: 18px 20px;
            font-size: 1.1rem;
            font-weight: 600;
            color: #163172;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .faq-toggle {
            font-size: 1.5rem;
            transition: transform 0.3s;
        }

        .faq-answer {
            height: 0;
            padding: 0 20px;
            font-size: 0.95rem;
