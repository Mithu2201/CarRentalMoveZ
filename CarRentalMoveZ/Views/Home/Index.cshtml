            }

        .car-btn {
            transition: background 0.3s ease, transform 0.3s ease;
        }

            .car-btn:hover {
                background: #3E7BDA;
                transform: translateY(-2px);
            }

        /* Fade-up animation */
        @@keyframes fadeUp {
            0%

        {
            opacity: 0;
            transform: translateY(30px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
