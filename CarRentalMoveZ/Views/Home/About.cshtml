        }

        .slider-arrow svg {
            fill: #000;
            width: 18px;
            height: 18px;
            user-select: none;
        }

        .slider-arrow.left {
            clip-path: polygon(0 0, 85% 0%, 100% 100%, 15% 100%);
        }

    /* Carousel container */
    .carousel-inner {
        overflow: hidden;
        position: relative;
    }

    .carousel-track {
        display: flex;
        gap: 1.5rem;
