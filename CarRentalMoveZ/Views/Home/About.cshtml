    /* Slider controls arrows in diamond shape */
    .slider-controls {
        position: absolute;
        top: 3rem;
        right: 2rem;
        display: flex;
        gap: 1rem;
        z-index: 10;
    }

    .slider-arrow {
        background-color: #1E56A0;
        width: 50px;
        height: 50px;
        clip-path: polygon(15% 0%, 100% 0%, 85% 100%, 0% 100%);
