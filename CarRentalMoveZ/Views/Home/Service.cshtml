@{
    ViewData["Title"] = "Service";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}



<!-- Page Title -->

    <div class="banner mb-4"><img src="~/Img/Service/ServiceBanner.png" alt="banner" class="img-fluid w-100 rounded-4" /></div>


<div class="service-container">

    <div class="container">
        <div class="row service-cards-row g-5">
            <!-- Card 1: Regular Transport -->
            <div class="col-md-4">
                <div class="service-card">
                    <img src="~/Img/Service/Re1.jpg" alt="Regular Transport" class="service-image" />
                    <div class="icon-circle" title="Car Icon">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 12h18M5 16v-4h14v4M7 16v2M17 16v2M9 16v-4h6v4" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <div class="service-label">
                        <div class="label-text">Regular Trip</div>
                        <a href="https://www.google.com/" target="_blank"
                           class="arrow-btn text-decoration-none" aria-label="Explore Regular Transport">
                            Explore <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card 2: City Transport -->
            <div class="col-md-4">
                <div class="service-card">
                    <img src="~/Img/Service/city.jpeg" alt="City Transport" class="service-image" />
                    <div class="icon-circle" title="Buildings Icon">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <rect x="3" y="10" width="4" height="8" rx="2" ry="2" stroke-linecap="round" stroke-linejoin="round" />
                            <rect x="9" y="7" width="4" height="11" rx="2" ry="2" stroke-linecap="round" stroke-linejoin="round" />
                            <rect x="15" y="4" width="4" height="14" rx="2" ry="2" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M6 8V6a4 4 0 0 1 8 0v2l-5 2v6l5-2z" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <div class="service-label">
                        <div class="label-text">City Transport</div>
                        <a href="https://www.google.com/" target="_blank"
                           class="arrow-btn text-decoration-none" aria-label="Explore City Transport">
                            Explore <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card 3: Business Tour -->
            <div class="col-md-4">
                <div class="service-card">
                    <img src="~/Img/Service/Business.jpg" alt="Business Tour" class="service-image" />
                    <div class="icon-circle" title="Briefcase Icon">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <rect x="3" y="8" width="18" height="10" rx="2" ry="2" stroke-linecap="round" stroke-linejoin="round" />
                            <rect x="8" y="4" width="8" height="4" rx="2" ry="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <div class="service-label">
                        <div class="label-text">Business Tour</div>
                        <a href="https://www.google.com/" target="_blank"
                           class="arrow-btn text-decoration-none" aria-label="Explore Business Tour">
                            Explore <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card 4: Shuttle Service -->
            <div class="col-md-4">
                <div class="service-card">
                    <img src="~/Img/Service/ceremony.jfif" alt="Shuttle Service" class="service-image" />
                    <div class="icon-circle" title="Shuttle Icon">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <rect x="3" y="8" width="18" height="8" rx="2" ry="2" stroke-linecap="round" stroke-linejoin="round" />
                            <circle cx="7" cy="18" r="2" stroke-linecap="round" stroke-linejoin="round" />
                            <circle cx="17" cy="18" r="2" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M6 8V6a4 4 0 0 1 8 0v2l-5 2v6l5-2z" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <div class="service-label">
                        <div class="label-text">Shuttle Service</div>
                        <a href="https://www.google.com/" target="_blank"
                           class="arrow-btn text-decoration-none" aria-label="Explore Shuttle Service">
                            Explore <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card 5: Airport Transport -->
            <div class="col-md-4">
                <div class="service-card">
                    <img src="~/Img/Service/airport.jpg" alt="Airport Transport" class="service-image" />
                    <div class="icon-circle" title="Airport Icon">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M18 13v-2l-5-2v6l5-2z" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M10 3v18" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M3 12h3l4-3v6l-4-3H3z" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <div class="service-label">
                        <div class="label-text">Airport Transport</div>
                        <a href="https://www.google.com/" target="_blank"
                           class="arrow-btn text-decoration-none" aria-label="Explore Airport Transport">
                            Explore <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card 6: Holiday Tour -->
            <div class="col-md-4">
                <div class="service-card">
                    <img src="~/Img/Service/family.jpg" alt="Holiday Tour" class="service-image" />
                    <div class="icon-circle" title="Holiday Icon">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 3v18" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M6 9h12l-3 6H9l-3-6z" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M9 21h6" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <div class="service-label">
                        <div class="label-text">Holiday Tour</div>
                        <a href="https://www.google.com/" target="_blank"
                           class="arrow-btn text-decoration-none" aria-label="Explore Holiday Tour">
                            Explore <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
