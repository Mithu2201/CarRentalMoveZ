@model CarRentalMoveZ.DTOs.DriverDTO

@{
    ViewData["Title"] = "Driver Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h3>Driver Details</h3>
        <a asp-action="ManageDriver" asp-controller="Admin" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Drivers
        </a>
    </div>

    <!-- Driver Card -->
    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <p><strong>Driver ID:</strong> @Model.DriverId</p>
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                    <p><strong>License Number:</strong> @Model.LicenseNo</p>
                </div>
                <div class="col-md-6">
                    <p>
                        <strong>Status:</strong>
                        @if (Model.Status == "Active")
                        {
                            <span class="badge bg-success">@Model.Status</span>
                        }
                        else if (Model.Status == "Inactive")
                        {
                            <span class="badge bg-secondary">@Model.Status</span>
                        }
                        else if (Model.Status == "Suspended")
                        {
                            <span class="badge bg-warning text-dark">@Model.Status</span>
                        }
                    </p>
                   
               @*      <p>
                        <strong>Assigned Vehicles:</strong>
                        @if (Model.AssignedVehicles != null && Model.AssignedVehicles.Any())
                        {
                            <ul>
                                @foreach (var car in Model.AssignedVehicles)
                                {
                                    <li>@car.CarName (@car.CarNumber)</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No vehicles assigned</span>
                        }
                    </p> *@
                </div>
            </div>
        </div>
    </div>
</div>
