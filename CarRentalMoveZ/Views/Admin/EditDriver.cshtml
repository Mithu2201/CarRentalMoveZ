@model CarRentalMoveZ.ViewModels.DriverViewModel

@{
    ViewData["Title"] = "Edit Driver";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Card layout -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header" style="background-color: #1E56A0; color: white;">
                    <h4 class="mb-0">Edit Driver</h4>
                </div>
                <div class="card-body p-4">

                    <!-- Error Message -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-3">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="EditDriver" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="DriverId" />

                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter driver name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Date of Birth -->
                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label fw-semibold"></label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <!-- Gender -->
                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label fw-semibold"></label>
                            <select asp-for="Gender" asp-items="ViewBag.GenderList" class="form-select">
                                <option value="" disabled selected>-- Select Gender --</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <!-- License Number -->
                        <div class="mb-3">
                            <label asp-for="LicenseNo" class="form-label fw-semibold"></label>
                            <input asp-for="LicenseNo" class="form-control" placeholder="Enter license number" />
                            <span asp-validation-for="LicenseNo" class="text-danger"></span>
                        </div>

                        <!-- Status -->
               @*          <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-semibold"></label>
                            <select asp-for="Status" asp-items="ViewBag.DriverStatusList" class="form-select">
                                <option value="" disabled selected>-- Select Driver Status --</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div> *@

                        <!-- Role (readonly fixed) -->
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-semibold"></label>
                            <input asp-for="Role" class="form-control" value="Driver" readonly />
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end mt-3">
                            <a asp-action="ManageDrivers" class="btn btn-secondary px-4 me-2">Back</a>
                            <button type="submit" class="btn px-4" style="background-color: #1E56A0; color: white;">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
