@model CarRentalMoveZ.ViewModels.StaffViewModel

@{
    ViewData["Title"] = "Edit Staff";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-lg-start">Edit Staff</h2>

<!-- Error Message -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="EditStaff" method="post">
    @Html.AntiForgeryToken()

    <!-- Staff ID (Hidden Field) -->
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" /> <!-- Add this -->
    <!-- Email Field (Readonly) -->
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email (Username)</label>
        <input asp-for="Email" class="form-control" value="@Model.Email" readonly />
    </div>

    <!-- Name Field -->
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter staff name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Phone Number Field -->
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <!-- Date of Birth Field -->
    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <!-- Gender Field -->
    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" asp-items="ViewBag.GenderList" class="form-control">
            <option value="" disabled selected>-- Select Gender --</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <!-- Role Field -->
    <div class="mb-3">
        <label asp-for="Role" class="form-label"></label>
        <select asp-for="Role" asp-items="ViewBag.RoleList" class="form-control">
            <option value="" disabled selected>-- Select Role --</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <!-- Submit and Back Buttons -->
    <div class="d-flex justify-content-end">
        <a asp-action="ManageStaff" class="btn btn-secondary ms-2">Back</a>
        <button type="submit" class="btn" style="background-color: #1E56A0; color: white; margin-left: 1rem;">
            Update Staff
        </button>
    </div>
</form>

<!-- Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
