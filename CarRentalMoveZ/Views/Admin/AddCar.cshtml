@model CarRentalMoveZ.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Add Car";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-lg-start">Add New Car</h2>

<!-- Error Message -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="AddCar" method="post">
    @Html.AntiForgeryToken()

    <!-- Car Name Field -->
    <div class="mb-3">
        <label asp-for="CarName" class="form-label"></label>
        <input asp-for="CarName" class="form-control" placeholder="Enter car name" />
        <span asp-validation-for="CarName" class="text-danger"></span>
    </div>

    <!-- Brand Field -->
    <div class="mb-3">
        <label asp-for="Brand" class="form-label"></label>
        <input asp-for="Brand" class="form-control" placeholder="Enter car brand" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <!-- Model Field -->
    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" placeholder="Enter car model" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <!-- Year Field -->
    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" type="number" class="form-control" placeholder="Enter car year" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <!-- Price Per Day Field -->
    <div class="mb-3">
        <label asp-for="PricePerDay" class="form-label"></label>
        <input asp-for="PricePerDay" type="number" step="0.01" class="form-control" placeholder="Enter price per day" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>

    <!-- Status Field -->
   @*  <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="" disabled selected>-- Select Car Status --</option>
            <option value="Available">Available</option>
            <option value="Booked">Booked</option>
            <option value="Maintenance">Maintenance</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div> *@

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        
        <select asp-for="Status" asp-items="ViewBag.CarStatusList" class="form-control">
            <option value="" disabled selected>-- Select Car Status --</option>
        </select>
       
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <!-- Image URL Field -->
    <div class="mb-3">
        <label asp-for="ImgURL" class="form-label"></label>
        <input asp-for="ImgURL" class="form-control" placeholder="Enter image URL" />
        <span asp-validation-for="ImgURL" class="text-danger"></span>
    </div>

    <!-- Submit and Back Buttons -->
    <div class="d-flex justify-content-end">
        <a asp-action="ManageCar" class="btn btn-secondary ms-2">Back</a>
        <button type="submit" class="btn" style="background-color: #1E56A0; color: white; margin-left: 1rem;">
            Add Car
        </button>
    </div>
</form>

<!-- Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
