@model CarRentalMoveZ.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Add Car";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Card width restricted to 6 columns -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header" style="background-color: #1E56A0; color: white;">
                    <h4 class="mb-0">Add New Car</h4>
                </div>
                <div class="card-body p-4">

                    <!-- Error Message -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-3">
                            @TempData["ErrorMessage"]
                        </div>
                    }


                    <form asp-action="AddCar" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Car Name -->
                        <div class="mb-3">
                            <label asp-for="CarName" class="form-label fw-semibold"></label>
                            <input asp-for="CarName" class="form-control" placeholder="Enter car name" />
                            <span asp-validation-for="CarName" class="text-danger"></span>
                        </div>

                        <!-- Brand -->
                        <div class="mb-3">
                            <label asp-for="Brand" class="form-label fw-semibold"></label>
                            <input asp-for="Brand" class="form-control" placeholder="Enter car brand" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <!-- Model -->
                        <div class="mb-3">
                            <label asp-for="Model" class="form-label fw-semibold"></label>
                            <input asp-for="Model" class="form-control" placeholder="Enter car model" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <!-- Year -->
                        <div class="mb-3">
                            <label asp-for="Year" class="form-label fw-semibold"></label>
                            <input asp-for="Year" type="number" class="form-control" placeholder="Enter year" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>

                        <!-- Price Per Day -->
                        <div class="mb-3">
                            <label asp-for="PricePerDay" class="form-label fw-semibold"></label>
                            <input asp-for="PricePerDay" type="number" step="0.01" class="form-control" placeholder="Enter price per day" />
                            <span asp-validation-for="PricePerDay" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-semibold"></label>
                            <select asp-for="Status" asp-items="ViewBag.CarStatusList" class="form-select">
                                <option value="" disabled selected>-- Select Car Status --</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-3">
                            <label asp-for="ImgURL" class="form-label fw-semibold"></label>
                            <input asp-for="ImgURL" class="form-control" placeholder="Enter image URL" />
                            <span asp-validation-for="ImgURL" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end mt-3">
                            <a asp-action="ManageCar" class="btn btn-secondary px-4 me-2">Back</a>
                            <button type="submit" class="btn px-4" style="background-color: #1E56A0; color: white;">
                                Add Car
                            </button>
                        </div>

                    </form>

                    <!-- Success Message -->
               @*      @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            @TempData["SuccessMessage"]
                        </div>
                    } *@
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
