@model CarRentalMoveZ.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Edit Car";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header" style="background-color: #1E56A0; color: white;">
                    <h4 class="mb-0">Edit Car Details</h4>
                </div>
                <div class="card-body p-4">

                    <!-- Error Message -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-3">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="EditCar" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CarId" />

                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CarName" class="form-label fw-semibold"></label>
                                    <input asp-for="CarName" class="form-control" placeholder="Enter car name" />
                                    <span asp-validation-for="CarName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Model" class="form-label fw-semibold"></label>
                                    <input asp-for="Model" class="form-control" placeholder="Enter car model" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PricePerDay" class="form-label fw-semibold"></label>
                                    <input asp-for="PricePerDay" type="number" step="0.01" class="form-control" placeholder="Enter price per day" />
                                    <span asp-validation-for="PricePerDay" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Seats" class="form-label fw-semibold"></label>
                                    <input asp-for="Seats" type="number" class="form-control" placeholder="Enter number of seats" />
                                    <span asp-validation-for="Seats" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TopSpeed" class="form-label fw-semibold"></label>
                                    <input asp-for="TopSpeed" type="number" class="form-control" placeholder="Enter top speed" />
                                    <span asp-validation-for="TopSpeed" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label fw-semibold"></label>
                                    <select asp-for="Status" asp-items="ViewBag.CarStatusList" class="form-select">
                                        <option value="" disabled selected>-- Select Car Status --</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TireReplacement" class="form-label fw-semibold"></label>
                                    <input asp-for="TireReplacement" type="date" class="form-control" />
                                    <span asp-validation-for="TireReplacement" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Brand" class="form-label fw-semibold"></label>
                                    <input asp-for="Brand" class="form-control" placeholder="Enter car brand" />
                                    <span asp-validation-for="Brand" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Year" class="form-label fw-semibold"></label>
                                    <input asp-for="Year" type="number" class="form-control" placeholder="Enter year" />
                                    <span asp-validation-for="Year" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Transmission" class="form-label fw-semibold"></label>
                                    <input asp-for="Transmission" class="form-control" placeholder="Enter transmission type" />
                                    <span asp-validation-for="Transmission" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Fuel" class="form-label fw-semibold"></label>
                                    <input asp-for="Fuel" class="form-control" placeholder="Enter fuel type" />
                                    <span asp-validation-for="Fuel" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="NextOilChange" class="form-label fw-semibold"></label>
                                    <input asp-for="NextOilChange" type="date" class="form-control" />
                                    <span asp-validation-for="NextOilChange" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImgURL" class="form-label fw-semibold"></label>
                                    <input asp-for="ImgURL" class="form-control" placeholder="Enter image URL" />
                                    <span asp-validation-for="ImgURL" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end mt-3">
                            <a asp-action="ManageCar" class="btn btn-secondary px-4 me-2">Back</a>
                            <button type="submit" class="btn px-4" style="background-color: #1E56A0; color: white;">
                                Save Changes
                            </button>
                        </div>

                    </form>

                    <!-- Success Message -->
              @*       @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            @TempData["SuccessMessage"]
                        </div>
                    } *@

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
