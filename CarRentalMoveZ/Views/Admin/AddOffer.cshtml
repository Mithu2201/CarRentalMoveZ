@model CarRentalMoveZ.ViewModels.OfferViewModel

@{
    ViewData["Title"] = "Add Offer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header" style="background-color: #1E56A0; color: white;">
                    <h4 class="mb-0">Add New Offer</h4>
                </div>
                <div class="card-body p-4">

                    <!-- Error Message -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-3">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="AddOffer" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Promo Code -->
                        <div class="mb-3">
                            <label asp-for="PromoCode" class="form-label fw-semibold"></label>
                            <input asp-for="PromoCode" class="form-control" placeholder="Enter promo code (e.g. WELCOME10)" />
                            <span asp-validation-for="PromoCode" class="text-danger"></span>
                        </div>

                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter offer title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter offer description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Discount Percentage -->
                        <div class="mb-3">
                            <label asp-for="DiscountPercentage" class="form-label fw-semibold"></label>
                            <input asp-for="DiscountPercentage" type="number" min="1" max="100" class="form-control" placeholder="Enter discount percentage" />
                            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                        </div>

                        <!-- Start Date -->
                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label fw-semibold"></label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <!-- End Date -->
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label fw-semibold"></label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end mt-3">
                            <a asp-action="ManageOffers" class="btn btn-secondary px-4 me-2">Back</a>
                            <button type="submit" class="btn px-4" style="background-color: #1E56A0; color: white;">
                                Add Offer
                            </button>
                        </div>

                    </form>

                    <!-- Success Message -->
                    @* @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            @TempData["SuccessMessage"]
                        </div>
                    } *@

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
