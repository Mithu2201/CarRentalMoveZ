@model IEnumerable<CarRentalMoveZ.DTOs.OfferDTO>

@using System.Reflection
@using System.ComponentModel.DataAnnotations

@{
    ViewData["Title"] = "Manage Offers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-3">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between flex-wrap mb-4">
        <h3>Offer Management</h3>
        <div class="d-flex gap-2 flex-grow-1 justify-content-end flex-wrap mb-2">
            <!-- Search -->
            <div class="input-group" style="max-width: 250px; flex-grow: 1;">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input type="text" id="searchInput" class="form-control" placeholder="Search promo code, title..." />
            </div>

            <!-- Filter -->
            <select id="statusFilter" class="form-select" style="max-width: 150px;">
                <option value="">All Status</option>
                <option value="Active">Active</option>
                <option value="Expired">Expired</option>
                <option value="Upcoming">Upcoming</option>
            </select>

            <!-- Add Button -->
            <a class="btn btn d-flex align-items-center" style="height: 38px; background-color: #1E56A0; color: white;" asp-action="AddOffer">
                <i class="bi bi-plus me-2"></i> Add New Offer
            </a>
        </div>
    </div>

    <!-- Offer Details -->
    <div id="offerDetails" class="card p-3 mb-3 d-none">
        <h5 class="fw-semibold mb-2">Offer Details</h5>
        <div id="detailsContent"></div>
    </div>

    <!-- Offer List -->
    <div class="table-responsive mt-3">
        <table class="table align-middle table-hover" id="offersTable">
            <thead class="table-light">
                <tr>
                    <th>Offer ID</th>
                    <th>Promo Code</th>
                    <th>Title</th>
                    <th>Discount %</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="small">
                @foreach (var offer in Model)
                {
                    string badgeClass = offer.Status switch
                    {
                        "Active" => "pill-ongoing",
                        "Expired" => "pill-pending",
                        "Upcoming" => "pill-returned",
                        _ => "pill-default"
                    };

                    <tr>
                        <td>@offer.OfferId</td>
                        <td>@offer.PromoCode</td>
                        <td>@offer.Title</td>
                        <td>@offer.DiscountPercentage %</td>
                        <td>@offer.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@offer.EndDate.ToString("yyyy-MM-dd")</td>
                        <td data-status="@offer.Status">
                            <span class="pill @badgeClass">@offer.Status</span>
                        </td>
                        <td>
                            <a asp-controller="Admin" asp-action="EditOffer" asp-route-id="@offer.OfferId" class="btn btn-sm btn-warning text-white">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Admin" asp-action="OfferDetails" asp-route-id="@offer.OfferId" class="btn btn-sm btn-primary text-white">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <button type="button"
                                    class="btn btn-sm btn-danger text-white"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal"
                                    data-id="@offer.OfferId"
                                    data-title="@offer.Title">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Delete Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete offer <b id="offerTitle"></b>?
                    </div>
                    <div class="modal-footer">
                        <form id="deleteForm" method="post">
                            <input type="hidden" name="id" id="offerId" />
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                            <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedRow = null;

        // Expand details
        document.querySelectorAll("#offersTable tbody tr").forEach(row => {
            row.addEventListener("click", function (e) {
                if (e.target.closest("a, button")) return;

                const detailsCard = document.getElementById("offerDetails");
                const detailsContent = document.getElementById("detailsContent");

                if (selectedRow === this) {
                    detailsCard.classList.add("d-none");
                    selectedRow = null;
                } else {
                    const cells = this.querySelectorAll("td");
                    detailsContent.innerHTML = `
                        <div>
                            <p><strong>Offer ID:</strong> ${cells[0].innerText}</p>
                            <p><strong>Promo Code:</strong> ${cells[1].innerText}</p>
                            <p><strong>Title:</strong> ${cells[2].innerText}</p>
                            <p><strong>Discount:</strong> ${cells[3].innerText}</p>
                            <p><strong>Start Date:</strong> ${cells[4].innerText}</p>
                            <p><strong>End Date:</strong> ${cells[5].innerText}</p>
                            <p><strong>Status:</strong> ${cells[6].innerText}</p>
                        </div>
                    `;
                    detailsCard.classList.remove("d-none");
                    selectedRow = this;
                }
            });
        });

        // Delete modal
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var offerId = button.getAttribute('data-id');
            var offerTitle = button.getAttribute('data-title');

            document.getElementById('offerTitle').textContent = offerTitle;
            document.getElementById('offerId').value = offerId;
            document.getElementById('deleteForm').action = '/Admin/DeleteOffer';
        });

        // Search & Filter
        document.getElementById("searchInput").addEventListener("input", filterTable);
        document.getElementById("statusFilter").addEventListener("change", filterTable);

        function filterTable() {
            const searchValue = document.getElementById("searchInput").value.toLowerCase();
            const statusValue = document.getElementById("statusFilter").value;

            document.querySelectorAll("#offersTable tbody tr").forEach(row => {
                const promo = row.cells[1].innerText.toLowerCase();
                const title = row.cells[2].innerText.toLowerCase();
                const status = row.cells[6].getAttribute("data-status");

                const matchesSearch = promo.includes(searchValue) || title.includes(searchValue);
                const matchesStatus = !statusValue || status === statusValue;

                row.style.display = (matchesSearch && matchesStatus) ? "" : "none";
            });
        }
    </script>
}
